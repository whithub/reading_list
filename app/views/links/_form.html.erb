<div class="link-form">

<%= form_for [@user, @link], url: user_links_path(@user), method: :post do |f| %>
    <%= f.label :url %>
    <%= f.text_field :url %> <br>

    <%= f.label :status %>
    <%= f.select :status, [['Unread', :unread], ['Read', :read]] %>

    <%= f.submit "Submit New Link" %>
  <% end %>
</div>
